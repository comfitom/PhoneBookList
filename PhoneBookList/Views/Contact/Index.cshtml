@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Contact";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-4">
            <h1 class="text-white">Contact List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Contact" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Contact
            </a>
        </div>
    </div>
</div>
<br /> <br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                Email
            </th>
            <th>
                Company
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var loop in Model)
        {
            <tr>
                <td>
                    @loop.FirstName
                </td>
                <td>
                    @loop.LastName
                </td>
                <td>
                    @loop.PhoneNumber
                </td>
                <td>
                    @loop.Email
                </td>
                <td>
                    @loop.Company
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Contact" asp-action="Update" asp-route-Id="@loop.Id" class="btn btn-primary" mx-2>
                            <i class="bi bi-pencil-square">Edit</i>
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Contact" asp-action="Delete" asp-route-Id="@loop.Id" class="btn btn-danger" mx-2>
                            <i class="bi bi-trash-fill">Delete</i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
