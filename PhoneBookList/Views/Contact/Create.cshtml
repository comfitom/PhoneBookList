@model Contact

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-white">
                Create Contact
            </h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control"/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control"/>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control"/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="E.g name@example.com"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Company"></label>
            <input asp-for="Company" class="form-control"/>
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-4" style="width: 150px">Create</button>
        <a asp-action="Index" class="btn btn-secondary mt-4" style="width: 150px">Back To List</a>
    </div>
</form>

